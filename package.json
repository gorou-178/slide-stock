{
  "name": "slide-stock",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "dev:worker": "wrangler dev worker/index.ts",
    "deploy:pages": "astro build && wrangler pages deploy dist/",
    "deploy:worker": "wrangler deploy worker/index.ts",
    "db:migrate:local": "wrangler d1 execute slide-stock-db --local --file=migrations/0001_init.sql",
    "db:migrate:remote": "wrangler d1 execute slide-stock-db --remote --file=migrations/0001_init.sql",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "db:seed": "npx tsx scripts/seed-local.ts > /tmp/slide-stock-seed.sql && wrangler d1 execute slide-stock-db --local --file=/tmp/slide-stock-seed.sql"
  },
  "dependencies": {
    "astro": "^5.17.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.12",
    "@cloudflare/workers-types": "^4.20250214.0",
    "@playwright/test": "^1.58.2",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2",
    "vitest": "~3.2.0",
    "wrangler": "^4.14.4"
  }
}
